generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model ShopSettings {
  id              String   @id @default(cuid())
  shop            String   @unique
  vapiAssistantId String?
  vapiPhoneNumber String?
  businessHours   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CallLog {
  id          String   @id @default(cuid())
  shop        String
  callId      String
  phoneNumber String?
  duration    Int?
  transcript  String?
  summary     String?
  createdAt   DateTime @default(now())
}

model VapiConfig {
  id              String   @id @default(cuid())
  shop            String   @unique
  vapiSignature   String   @unique
  assistantId     String?  // VAPI assistant ID
  phoneNumber     String?  // VAPI phone number
  phoneNumberId   String?  // VAPI phone number ID (for API operations)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model GdprRequest {
  id              String   @id @default(cuid())
  shop            String
  requestType     String   // "data_request", "customer_redact", "shop_redact"
  ordersRequested String[] // Order IDs associated with the request
  customerId      String?  // Shopify customer ID (for customer requests)
  customerEmail   String?  // Customer email (for customer requests)
  customerPhone   String?  // Customer phone (for customer requests)
  payload         String?  // JSON payload from Shopify webhook
  status          String   @default("pending") // "pending", "processing", "completed", "failed"
  processedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([shop])
  @@index([requestType])
  @@index([status])
}